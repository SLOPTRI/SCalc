<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scalc_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/scalc_primary"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSubtituloConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajusta tus tarifas y preferencias"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloConfig"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTarifas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/scalc_card_background"
        app:layout_constraintTop_toBottomOf="@id/tvSubtituloConfig">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:text="Mi Usuario"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfHora"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                app:boxStrokeColor="@color/scalc_primary"
                app:hintTextColor="@color/scalc_primary"
                android:textColorHint="@color/text_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/text_primary"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfHora"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:hint="Bonificacion por Hora (€)"
                app:boxStrokeColor="@color/scalc_primary"
                app:hintTextColor="@color/scalc_primary"
                android:textColorHint="@color/text_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_primary"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfPedido"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bonificacion por Pedido (€)"
                android:layout_marginTop="16dp"
                app:boxStrokeColor="@color/scalc_primary"
                app:hintTextColor="@color/scalc_primary"
                android:textColorHint="@color/text_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_primary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGuardarConfig"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Guardar Cambios"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/scalc_primary"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>