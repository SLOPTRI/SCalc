<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scalc_background"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogoContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="40dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTituloBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a SCalc"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/scalc_primary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardLogoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtituloBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configura tu perfil para empezar a controlar tus ganancias."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloBienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtituloBienvenida">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tu Nombre"
            app:hintTextColor="@color/scalc_primary"
            android:textColorHint="@color/text_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/text_primary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bonificacion por Hora (€)"
            android:layout_marginTop="16dp"
            app:hintTextColor="@color/scalc_primary"
            android:textColorHint="@color/text_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrecioHoraUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/text_primary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bonificacion por Pedido (€)"
            android:layout_marginTop="16dp"
            app:hintTextColor="@color/scalc_primary"
            android:textColorHint="@color/text_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrecioPedidoUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/text_primary"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEmpezar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Comenzar a Trabajar"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/scalc_primary"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>