<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scalc_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, Salvador"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/scalc_primary"
        app:layout_constraintTop_toBottomOf="@id/tvSaludo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvMesActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENERO 2026"
                android:textColor="#CCFFFFFF"
                android:letterSpacing="0.15"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSalarioMes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 €"
                android:textColor="@color/white"
                android:textSize="56sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:baselineAligned="false"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvPedidos"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="PEDIDOS"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvTotalPedidos"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvHoras"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="HORAS"
                        android:textColor="#CCFFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvTotalHoras"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0h"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNuevaJornada"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="+ Añadir Jornada"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="@color/scalc_primary"
        android:layout_marginTop="32dp"
        app:cornerRadius="16dp"
        app:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardResumen"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorial"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Historial"
            android:layout_marginEnd="8dp"

            android:textColor="@color/text_primary"
            app:strokeColor="@color/scalc_primary"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfiguracion"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Ajustes"
            android:layout_marginStart="8dp"

            android:textColor="@color/text_primary"
            app:strokeColor="@color/scalc_primary"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>